{
  "printWidth": 120,
  "bracketSpacing": true,
  "trailingComma": "es5",
  "useTabs": false,
  "semi": true,
  "tabWidth": 2,
  "jsxBracketSameLine": true,
  "endOfLine": "lf",
  "singleQuote": true,
  "overrides": [
    {
      "files": "*.{css,scss}",
      "options": {
        "singleQuote": false
      }
    }
  ],
  "importOrder": [
    "app/**",
    "pages/*/**",
    "features/*/**",
    "entities/*/**",
    "shared/*/*/**",
    "../**/app",
    "../**/pages",
    "../**/features",
    "../**/entities",
    "../**/shared"
  ]
}
